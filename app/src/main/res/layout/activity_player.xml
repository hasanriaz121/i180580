<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="bottom"

    tools:context=".Player">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="964dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Song Title"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/golden"
            android:text="By Artist"
            android:textSize="20sp"
            android:paddingLeft="20dp"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/white"
            android:layout_marginTop="50dp"/>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/fast_forward_next"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_marginBottom="1dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_play_arrow_24"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/rewind_previous"/>
        </LinearLayout>

        <SeekBar
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/dark_gold"
            android:thumbTint="@color/golden"
            android:max="150" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/golden"
            android:text="elapsed"/>
<View
    android:layout_width="match_parent"
    android:layout_height="200dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"

    android:gravity="center">
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:tint="@color/white"

        android:src="@drawable/heart"/>
    <ImageView
        android:layout_marginHorizontal="2.5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/download"/>
    <ImageView
        android:layout_marginHorizontal="2.5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:tint="@color/white"
        android:src="@drawable/ic_baseline_queue_music_24"/>
    <ImageView
        android:layout_marginHorizontal="2.5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/msg"/>
    <ImageView
        android:layout_marginHorizontal="2.5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:src="@drawable/ic_baseline_more_vert_24"/>
</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="65.79dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/heart"
                app:tint="@color/golden" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Liked"
                android:textColor="@color/grey_bartext"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"

            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_add_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Add"
                android:textColor="@color/grey_bartext"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_search_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Search"
                android:textColor="@color/grey_bartext"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/listen_later" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Listen Later"
                android:textColor="@color/grey_bartext"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>